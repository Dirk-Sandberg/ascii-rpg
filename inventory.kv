<InventoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            OutlinedBoxLayout:
                orientation: 'vertical'
                padding: 10
                #Label:
                #    text: "Weapon"
                #    height: self.texture_size[1]
                #    size_hint: 1, None
                Label:
                    id: weapon
                    text: '' if not root.weapon else "[font=RobotoMono-Regular]"+app.render(root.weapon.art, root.weapon.element) + "[/font]"
                    markup: True
                Label:
                    text: '' if not root.weapon else "[font=RobotoMono-Regular]"+app.render(root.weapon.name, root.weapon.element) + "[/font]"
                    height: self.texture_size[1]
                    size_hint: 1, None
                    markup: True
            OutlinedBoxLayout:
                orientation: 'vertical'
                padding: 10
                #Label:
                #    text: "Armor"
                #    height: self.texture_size[1]
                #    size_hint: 1, None
                Label:
                    id: armor
                    markup: True
                    text: '' if not root.armor else "[font=RobotoMono-Regular]"+app.render(root.armor.art, root.armor.element,) + "[/font]"
                Label:
                    text: '' if not root.armor else "[font=RobotoMono-Regular]"+app.render(root.armor.name, root.armor.element) + "[/font]"
                    height: self.texture_size[1]
                    size_hint: 1, None
                    markup: True
        GridLayout:
            id: inventory
            rows: 1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    height: self.texture_size[1]
                    size_hint: 1, None
                    id: item0
                    markup: True
                    text: '' if len(root.inventory) < 1 else "[font=RobotoMono-Regular]" + app.render(root.inventory[0].name, root.inventory[0].element, ) + "[/font]"
                Label:
                    text: '' if len(root.inventory) < 1 else "[font=RobotoMono-Regular]" + root.compare_stats(root.inventory[0]) + "[/font]"
                    markup: True

            BoxLayout:
                orientation: 'vertical'
                Label:
                    height: self.texture_size[1]
                    size_hint: 1, None
                    id: item1
                    markup: True
                    text: '' if len(root.inventory) < 2 else "[font=RobotoMono-Regular]" + app.render(root.inventory[1].name, root.inventory[1].element) + "[/font]"
                Label:
                    text: '' if len(root.inventory) < 2 else "[font=RobotoMono-Regular]" + root.compare_stats(root.inventory[1]) + "[/font]"
                    markup: True


            BoxLayout:
                orientation: 'vertical'
                Label:
                    height: self.texture_size[1]
                    size_hint: 1, None
                    id: item2
                    markup: True
                    text: '' if len(root.inventory) < 3 else "[font=RobotoMono-Regular]" + app.render(root.inventory[2].name, root.inventory[2].element) + "[/font]"
                Label:
                    text: '' if len(root.inventory) < 3 else "[font=RobotoMono-Regular]" + root.compare_stats(root.inventory[2]) + "[/font]"
                    markup: True
        GridLayout:
            rows: 1
            size_hint: 1, .2
            Button:
                text: "Back"
                on_release:
                    app.change_screen('home_screen')
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[0], 0)
                disabled: len(root.inventory) < 1
                opacity: 1-float(len(root.inventory) < 1)
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[1], 1)
                disabled: len(root.inventory) < 2
                opacity: 1-float(len(root.inventory) < 1)
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[2], 2)
                disabled: len(root.inventory) < 3
                opacity: 1-float(len(root.inventory) < 1)


