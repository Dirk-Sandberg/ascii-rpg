<InventoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            OutlinedBoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Weapon"
                    size_hint: 1, None
                Label:
                    id: weapon
                    text: '' if not root.weapon else "[font=RobotoMono-Regular]"+root.weapon.art + "[/font]"
                    markup: True
                Label:
                    text: '' if not root.weapon else "[font=RobotoMono-Regular]"+root.weapon.name + "[/font]"
                    size_hint: 1, None
                    markup: True
            OutlinedBoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Armor"
                    size_hint: 1, None
                Label:
                    id: armor
                    markup: True
                    text: '' if not root.armor else "[font=RobotoMono-Regular]"+root.armor.art + "[/font]"
                Label:
                    text: '' if not root.armor else "[font=RobotoMono-Regular]"+root.armor.name + "[/font]"
                    size_hint: 1, None
                    markup: True
        GridLayout:
            id: inventory
            rows: 1
            Label:
                id: item0
                markup: True
                text: '' if len(root.inventory) < 1 else "[font=RobotoMono-Regular]" + root.inventory[0].art + "[/font]"
            Label:
                id: item1
                markup: True
                text: '' if len(root.inventory) < 2 else "[font=RobotoMono-Regular]" + root.inventory[1].art + "[/font]"
            Label:
                id: item2
                markup: True
                text: '' if len(root.inventory) < 3 else "[font=RobotoMono-Regular]" + root.inventory[2].art + "[/font]"
        GridLayout:
            rows: 1
            size_hint: 1, .2
            Button:
                text: "Back"
                on_release:
                    app.change_screen('home_screen')
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[0], 0)
                disabled: len(root.inventory) < 1
                opacity: 1-float(len(root.inventory) < 1)
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[1], 1)
                disabled: len(root.inventory) < 2
                opacity: 1-float(len(root.inventory) < 1)
            Button:
                text: "Equip"
                on_release: root.equip_item(root.inventory[2], 2)
                disabled: len(root.inventory) < 3
                opacity: 1-float(len(root.inventory) < 1)


