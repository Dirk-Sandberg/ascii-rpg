#:import TextLog text_log.TextLog
BoxLayout:
    orientation: 'vertical'
    # Main game UI
    id: main_ui
    size_hint: 1, 1
    Label:
        id: toolbar
        size_hint: 1, .1
        text: "Health: " + str(app.player.current_health) + '/' + str(app.player.max_health)
    BoxLayout:
        size_hint: 1, .7
        orientation: 'vertical'
        Label:
            id: combat
            size_hint: .7, 1
            markup: True
        Label:
            id: monster_toolbar
            size_hint: 1, .1
        Button:
            text: "Embark"
            on_release:
                app.embark()
        Button:
            text: "Attack"
            on_release:
                app.attack()
    TextLog:
        id: log
        markup: True
        size_hint: 1, .2
